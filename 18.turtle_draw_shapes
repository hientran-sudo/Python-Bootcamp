from turtle import Turtle
import random
tim = Turtle()
colors = ["CornFlowerBlue", "IndianRed", "DarkOrchid", "DeepSkyBlue", "LightSeaGreen", "SlateGray"]

def draw_shape(num_sides):
  angle = 360/num_sides
  for _ in range(num_sides):
    tim.forward(100)
    tim.right(angle)
  
for i in range(3,11):
  tim.color(random.choice(colors))
  draw_shape(i)
